---
import { getLangFromUrl } from "../i18n/utils";
import "../styles/fonts.css";
import "../styles/globals.css";
import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/queen.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="main">
			<slot />
		</main>
		<footer class="footer">
			<Footer />
		</footer>
	</body>
</html>

<style is:global lang="postcss">

	body {
		@apply
			text-sten-500
			dark:text-white
			bg-white
			dark:bg-sten-950
			transition-colors;

		background-color: var(--neutral-light);
	}

	.main {
		@apply
			max-md:flex
			max-md:flex-col
			max-md:justify-center
			max-md:items-center
			max-md:px-6
			grid
			grid-cols-[1fr,250px,auto,auto,1fr]
			w-full
			gap-6;
	}

	.main::before {
		background: var(--neutral-glow);
		border-radius: 50%;
		width: 540px;
		height: 420px;
		margin-left: -400px;
		content: '';
		top: 40%;
		left: 60%;
		position: absolute;
		filter: blur(80px);
		transform: translateZ(0);
	}

	.footer {
		@apply
			flex
			justify-center
			items-center
			h-80
			w-full
			gap-6;
	}
</style>
